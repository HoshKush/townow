<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="category">
	<insert id="createCategory1" parameterType="CategoryDTO">
		insert into category1(ca1_name) value(#{ca1_name})
	</insert>
	
	<insert id="createCategory2" parameterType="CategoryDTO">
		insert into category2(ca1_name, ca2_name) value(#{ca1_name}, #{ca2_name})
	</insert>
	
	<delete id="deleteCategory1" parameterType="String">
		delete from category1
		where ca1_name = #{ca1_name}
	</delete>
	
	<delete id="deleteCategory2" parameterType="String">
		delete from category2
		where ca2_name = #{ca2_name}
	</delete>
</mapper>